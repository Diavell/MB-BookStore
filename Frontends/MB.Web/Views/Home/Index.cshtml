@{
    ViewData["Title"] = "Home Page";
    var count = 0;
}
@model List<ProductViewModel>

<h2>Products</h2>
<hr />

@if (Model != null)
{
    @foreach (var product in Model)
    {
        count++;
        if (count == 1||count % 3 == 1)
        {
            @Html.Raw("<div class='row row-cols-1 row-cols-md-3 g-4 mb-2'>")
        }

        <div class="col">
            <div class="card h-100">
                <img src="@product.StockPictureUrl" class="card-img-top" alt="@product.Name">
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.ShortDescription</p>
                    <h4 class="text-primary">@product.Price TL</h4>
                    <a class="btn btn-success" asp-route-id="@product.Id" asp-controller="Home" asp-action="Detail">Detail</a>
                </div>
            </div>
        </div>

        if (count % 3 == 0)
        {
            @Html.Raw("</div>")
        }
    }
}