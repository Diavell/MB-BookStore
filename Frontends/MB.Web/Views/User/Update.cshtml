
@{
    ViewData["Title"] = "Update";
}
@model UserViewModel

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/all.min.css" integrity="sha256-2XFplPlrFClt0bIdPgpz8H7ojnk10H69xRqd9+uTShA=" crossorigin="anonymous" />

<body style="background-color:antiquewhite">
    <div class="container" style="background-color:#FFFFFF; border-radius: 50px;">
        <div class="row">
            <div class="col-12">
                <!-- Page title -->
                <div class="row">
                    <div class="col text-center py-5">
                        <h1 class="text-secondary text-uppercase font-italic common-title">Update Profile</h1>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="p-5">
                            <div class="text-center">
                            </div>
                            <form class="user" asp-action="Update">
                                <div class="form-group pt-3">
                                    <input asp-for="Id" type="text" class="form-control form-control-user"
                                           id="exampleID" placeholder="ID" disabled>
                                </div>
                                <div class="form-group pt-3">
                                    <input asp-for="UserName" type="text" class="form-control form-control-user"
                                           id="exampleFirstName" placeholder="Full Name">
                                </div>
                                <div class="form-group pt-3">
                                    <input asp-for="Email" type="email" class="form-control form-control-user"
                                           id="exampleInputEmail" placeholder="Email Address">
                                </div>
                                <div class="form-group pt-3 pb-3">
                                    <input asp-for="City" type="text" class="form-control form-control-user"
                                           id="exampleInputCity" placeholder="City">
                                </div>
                                <div asp-validation-summary="ModelOnly" class="text-danger pb-2"></div>
                                <button type="submit" class="btn btn-primary btn-user btn-block">
                                    Save
                                </button>
                                <hr>
                            </form>
                            <hr>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>