
@{
    ViewData["Title"] = "AllUsers";
}
@model PaginatedList<UserViewModel>

<body style="background-color:antiquewhite">
    <div class="row pt-3 pb-3" style="background-color:#FFFFFF; border-radius: 50px;">
        <div class="col-md-12">
            <div>
                <div class="row">
                    <div class="col text-center py-5">
                        <h1 class="text-secondary text-uppercase font-italic common-title">Members</h1>
                    </div>
                    <div class="form-group">
                        <input type="text" class="search form-control" style="border-radius: 20px;" placeholder="What are you looking for?">
                    </div>
                </div>
                @if (Model.Any())
                {
                    <div>
                        <table class="table table-striped results">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>UserName</th>
                                    <th>Email</th>
                                    <th>City</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {

                                    <tr>
                                        <td>@user.Id</td>
                                        <td>@user.UserName</td>
                                        <td>@user.Email</td>
                                        <td>@user.City</td>
                                        <td style="display: flex; gap: 10px;">
                                            <a asp-controller="User" asp-action="Update" asp-route-id="@user.Id" class="btn btn-info rounded-circle custom-btn"><i class="bi bi-gear"></i></a>
                                            <a asp-controller="User" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger ml-2 rounded-circle custom-btn"
                                               onclick="return confirmDelete('@user.Id')"><i class="bi bi-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-center">
                            @if (Model.HasPreviousPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="AllUsers" asp-route-pageNumber="@(Model.PageIndex - 1)">Previous</a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item disabled">
                                    <a class="page-link" href="#">Previous</a>
                                </li>
                            }

                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(Model.PageIndex == i ? "active" : "")">
                                    <a class="page-link" asp-action="AllUsers" asp-route-pageNumber="@i">@i</a>
                                </li>
                            }

                            @if (Model.HasNextPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="AllUsers" asp-route-pageNumber="@(Model.PageIndex + 1)">Next</a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item disabled">
                                    <a class="page-link" href="#">Next</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
                else
                {
                    <div class="alert alert-info">
                        Product not found
                    </div>
                }
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function confirmDelete(userId) {
            return confirm("Are you sure you want to delete the member with ID " + userId + "?");
        }
        $(document).ready(function () {
            $(".search").keyup(function () {
                var searchTerm = $(".search").val();
                var listItem = $('.results tbody').children('tr');
                var searchSplit = searchTerm.replace(/ /g, "'):containsi('")

                $.extend($.expr[':'], {
                    'containsi': function (elem, i, match, array) {
                        return (elem.textContent || elem.innerText || '').toLowerCase().indexOf((match[3] || "").toLowerCase()) >= 0;
                    }
                });

                $(".results tbody tr").not(":containsi('" + searchSplit + "')").each(function (e) {
                    $(this).attr('visible', 'false');
                });

                $(".results tbody tr:containsi('" + searchSplit + "')").each(function (e) {
                    $(this).attr('visible', 'true');
                });

                var jobCount = $('.results tbody tr[visible="true"]').length;
                $('.counter').text(jobCount + ' item');

                if (jobCount == '0') { $('.no-result').show(); }
                else { $('.no-result').hide(); }
            });
        });
    </script>
</body>