﻿@{
    ViewData["Title"] = "Checkout";
}
@model CheckoutInfoInput
<form asp-controller="Order" asp-action="Checkout" method="post">
    <div class="row">

        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Address Information</h5>
                    <div class="mb-3">
                        <label class="form-label" asp-for="Province"></label>
                        <input asp-for="Province" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="District"></label>
                        <input asp-for="District" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="Street"></label>
                        <input asp-for="Street" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="Line"></label>
                        <input asp-for="Line" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="ZipCode"></label>
                        <input asp-for="ZipCode" class="form-control">
                    </div>

                    <h5 class="card-title">Payment Information</h5>
                    <div class="mb-3">
                        <label class="form-label" asp-for="CardHolderName"></label>
                        <input asp-for="CardHolderName" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="CardNumber"></label>
                        <input asp-for="CardNumber" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="ExpiryDate"></label>
                        <input asp-for="ExpiryDate" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="CVV"></label>
                        <input asp-for="CVV" class="form-control">
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Payment Summary</h5>
                    <table class="table table-striped">
                        @foreach (var item in ViewBag.basket.BasketItems as List<BasketItemViewModel>)
                        {
                            <tr>
                                <td>@item.ProductName</td>
                                <td>@item.Price</td>
                                <td>@item.Quantity</td>
                            </tr>
                        }

                        <tr>
                            <td>Total Price</td>
                            <td>@ViewBag.basket.TotalPrice TL</td>
                        </tr>
                    </table>

                    <button type="submit" class="btn btn-success">Complete Payment</button>
                </div>
            </div>
        </div>
    </div>
</form>