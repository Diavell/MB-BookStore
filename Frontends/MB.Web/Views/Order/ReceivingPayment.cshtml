
@{
    ViewData["Title"] = "ReceivingPayment";
}

<div id="paymentStatus">
    <h1>Payment in Progress...</h1>
    <p>Please wait while we process your payment.</p>
    <img src="/img/book-loading.gif" alt="Loading" />
</div>

<script>
    setTimeout(function () {
        window.location.href = "@Url.Action("SuccessfulCheckout", new { orderId = ViewBag.OrderId })";
    }, 5000);
</script>