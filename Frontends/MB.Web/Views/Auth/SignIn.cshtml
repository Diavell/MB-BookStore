
@{
    ViewData["Title"] = "SignIn";
}
@model MB.Web.Models.SigninInput

<body class="bg-gradient" style="background-color:antiquewhite">

    <div class="containerr" >
        <!-- Outer Row -->
        <div class="row justify-content-center pt-3">
            <div class="col-xxl-12">
                <div class="card o-hidden border-0 shadow-lg my-5" style="border-radius: 50px">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center pt-5">
                                        <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                                    </div>
                                    <div class="text-center pt-5">
                                    </div>
                                    <form class="user" asp-controller="Auth" asp-action="SignIn" method="post">
                                        <div class="form-group pt-3">
                                            <input asp-for="Email" type="email" value="erdemca@hotmail.com" class="form-control form-control-user"
                                                   id="exampleInputEmail" aria-describedby="emailHelp"
                                                   placeholder="Enter Email Address...">
                                        </div>
                                        <div class="form-group pt-3 pb-3">
                                            <input asp-for="Password" type="password" value="Password12*" class="form-control form-control-user"
                                                   id="exampleInputPassword" placeholder="Password">
                                        </div>
                                        <div asp-validation-summary="ModelOnly" class="text-danger pb-2"></div>
                                        <button type="submit" class="btn btn-primary btn-user btn-block">
                                            Login
                                        </button>
                                        <hr>
                                    </form>
                                    <hr>
                                    <div class="text-center pt-5">
                                    </div>
                                    <div class="text-center pt-5">
                                    </div>
                                    <div class="text-center pt-5">
                                        <a class="small" asp-area="" asp-controller="Auth" asp-action="Register" style="padding: 10px;">Create an Account!</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin-2.min.js"></script>

</body>
