
@{
    ViewData["Title"] = "SignIn";
}
@model SigninInput

<body class="bg-gradient" style="background-color:antiquewhite">
    <div class="container" >
        <div class="row justify-content-center pt-3">
            <div class="col-xxl-12">
                <div class="card o-hidden border-0 shadow-lg my-5" style="border-radius: 50px">
                    <div class="card-body p-0">
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center pt-5">
                                        <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                                    </div>
                                    <div class="text-center pt-5">
                                    </div>
                                    <form class="user" asp-controller="Auth" asp-action="SignIn" method="post">
                                        <div class="form-group pt-3">
                                            <input asp-for="Email" type="email" value="erdemca@hotmail.com" class="form-control form-control-user"
                                                   id="exampleInputEmail" aria-describedby="emailHelp"
                                                   placeholder="Enter Email Address...">
                                        </div>
                                        <div class="form-group pt-5 pb-3">
                                            <input asp-for="Password" type="password" value="Password12*" class="form-control form-control-user"
                                                   id="exampleInputPassword" placeholder="Password">
                                        </div>
                                        <div asp-validation-summary="ModelOnly" class="text-danger pb-2"></div>
                                        <button type="submit" class="btn btn-primary btn-user btn-block mt-5">
                                            Login
                                        </button>
                                        <hr>
                                    </form>
                                    <hr>
                                    <div class="text-center pt-5">
                                    </div>
                                    <div class="text-center pt-5">
                                        <a class="text-center" asp-area="" asp-controller="Auth" asp-action="Register" style="padding: 10px;">Create an Account!</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
