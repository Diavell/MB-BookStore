@{
    ViewData["Title"] = "Index";
    var totalPrice = 0.0;
    if (Model != null && Model.BasketItems.Any())
    {
        totalPrice = ((double)Model.TotalPrice);
    }
}

@model BasketViewModel

<body style ="background-color:antiquewhite">
    <section class="h-100" style="background-color:#FFFFFF; border-radius: 50px;">
        <div class="container h-100 py-5">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-10">

                    <div class="row">
                        <div class="col text-center py-5">
                            <h1 class="text-secondary text-uppercase font-italic common-title">Shopping Cart</h1>
                        </div>
                    </div>

                    @if (Model != null && Model.BasketItems.Any())
                    {
                        @foreach (var item in Model.BasketItems)
                        {
                            <div class="card rounded-3 mb-4" style="background-color:#F1F1F1">
                                <div class="card-body p-4">
                                    <div class="row d-flex justify-content-between align-items-center">
                                        <div class="col-md-2 col-lg-2 col-xl-2">
                                            <img src="@item.Picture" class="img-fluid rounded-3" alt="@item.ProductName">
                                        </div>
                                        <div class="col-md-3 col-lg-3 col-xl-3">
                                            <p class="lead fw-normal mb-2">@item.ProductName</p>
                                            <p><span class="text-muted">ID: </span>@item.ProductId</p>
                                        </div>
                                        <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                                            <a class="btn btn-link px-2" asp-controller="Basket" asp-action="DecreaseQuantity" asp-route-productId="@item.ProductId">
                                                <i class="fas fa-minus"></i>
                                            </a>
                                            <span class="form-control form-control-sm text-center">@item.Quantity</span>
                                            <a class="btn btn-link px-2" asp-controller="Basket" asp-action="IncreaseQuantity" asp-route-productId="@item.ProductId">
                                                <i class="fas fa-plus"></i>
                                            </a>
                                        </div>
                                        <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                                            <h5 class="mb-0">@item.Price</h5>
                                        </div>
                                        <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                                            <a asp-controller="Basket" asp-action="RemoveBasketItem" asp-route-productId="@item.ProductId" class="text-danger"><i class="fas fa-trash fa-lg"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="card">
                            <div class="card-body d-flex justify-content-center" style="background-color:#F1F1F1">
                                <a asp-controller="Home" asp-action="Index" type="button" class="btn btn-secondary btn-block btn-lg m-3">Keep Shopping</a>
                                <a asp-controller="Order" asp-action="Checkout" type="button" class="btn btn-warning btn-block btn-lg m-3 ">@totalPrice₺ Proceed to Pay</a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mt-5">Basket is empty.</div>
                        <div class="card mt-5">
                            <div class="card-body d-flex justify-content-center" style="background-color:#F1F1F1">
                                <a asp-controller="Home" asp-action="Index" type="button" class="btn btn-secondary btn-block btn-lg m-3">Keep Shopping</a>
                            </div>
                        </div>
                        <div class="mt-4 pt-1"></div>
                    }
                </div>
            </div>
        </div>
    </section>
</body>
