
@{
    ViewData["Title"] = "Index";
}

<div>
    <h1>Welcome to Admin Panel</h1>

    <p>Here you can manage the books and users.</p>

    <p>Click on the links in the bottom to manage the products and users.</p>
    
    <div class="col-md-3">
        <div class="list-group">
            <a asp-controller="Products" asp-action="Index" class="list-group-item list-group-item-action">Products</a>
        </div>
    </div>

    <div class="col-md-3">
        <div class="list-group">
            <a asp-controller="User" asp-action="AllUsers" class="list-group-item list-group-item-action">Users</a>
        </div>
    </div>
</div>