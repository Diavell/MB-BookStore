<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MB.Web</title>
    <link href="~/lib/bootstrap-5.3.3/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MB.Web.styles.css" asp-append-version="true" />
    <link rel="icon" href="img/title-img.png">
</head>
<body>
    <header>
        @if (User.Identity.Name == "Admin")
        {
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="nav nav-underline">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Index" style="padding: 10px;">Home</a>
                            </li>
                        </ul>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <ul class="navbar-nav">
                                <li class="nav-item dropdown px-5">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        @User.Identity.Name
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Auth" asp-action="LogOut">LogOut</a></li>
                                    </ul>
                                </li>
                            </ul>
                        }
                        else
                        {
                            <ul class="nav nav-underline">
                                <li class="nav-item">
                                    <a class="nav-link " asp-area="" asp-controller="Auth" asp-action="AdminSignIn" style="padding: 10px;">Sign Up for Admin</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Auth" asp-action="SignIn" style="padding: 10px;">Sign In</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Auth" asp-action="Register" style="padding: 10px;">Register</a>
                                </li>
                            </ul>
                        }
                    </div>
                </div>
            </nav>
        }
        else
        {
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MB Bookstore</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation" style="color:ActiveBorder">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="nav nav-underline">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" style="padding: 10px;">Home</a>
                            </li>
                        </ul>
                        <form asp-controller="Home" asp-action="Detail" class=" d-flex mx-5" role="search">
                            <input id="searchInput" class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-outline-success" value="">Search</button>
                        </form>
                        @* <form asp-controller="Home" asp-action="Detail" method="get">
                    <p>
                    Title: <input type="text" name="SearchString" />
                    <input type="submit" value="Filter" />
                    </p>
                    </form> *@

                        @if (User.Identity.IsAuthenticated)
                        {
                            <ul class="navbar-nav">
                                <li class="nav-item dropdown px-5">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        @User.Identity.Name
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="User" asp-action="Index">Profile</a></li>
                                        <li><a class="dropdown-item" asp-controller="Order" asp-action="CheckoutHistory">Ödeme geçmişim</a></li>
                                        <li><a class="dropdown-item" asp-controller="Basket" asp-action="Index">Basket</a></li>
                                        <li><a class="dropdown-item" asp-controller="Auth" asp-action="LogOut">LogOut</a></li>
                                    </ul>
                                </li>
                            </ul>
                        }
                        else
                        {
                            <ul class="nav nav-underline">
                                <li class="nav-item">
                                    <a class="nav-link " asp-area="" asp-controller="Auth" asp-action="AdminSignIn" style="padding: 10px;">Sign Up for Admin</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Auth" asp-action="SignIn" style="padding: 10px;">Sign In</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Auth" asp-action="Register" style="padding: 10px;">Register</a>
                                </li>
                            </ul>
                        }
                    </div>
                </div>
            </nav>
        }
        
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - MB.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap-5.3.3/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
