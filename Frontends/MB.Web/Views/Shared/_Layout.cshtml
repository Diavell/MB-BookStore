<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MB.Web</title>
    <link href="~/lib/bootstrap-5.3.3/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MB.Web.styles.css" asp-append-version="true" />
    <link rel="icon" href="img/title-img.png">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <!-- Custom fonts for this template-->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/bootstrap.css">
    <link href="https://fonts.googleapis.com/css?family=Great+Vibes" rel="stylesheet">
    <link rel="stylesheet" href="./fontawesome-pro-5.13.0-web/css/all.min.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/lightbox.css">
</head>
<body>
    
    @if (User.Identity.Name == "Admin")
    {
        <!-- Navigation -->
        <nav class="navigation">
            <button class="navbar-toggler hamburger-menu" type="button" data-toggle="collapse" data-target="#myNavbar">
                <div class="line1"></div>
                <div class="line2"></div>
                <div class="line3"></div>
            </button>
            <div class="bg-cover"></div>
            <div class="collapse nav-content" id="myNavbar">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-10 mx-auto">
                            <a href="#" class="navbar-brand mt-4 d-lg-none d-block">
                                <img src="~/book2.png" />
                            </a>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <ul class="navbar-nav text-capitalize flex-lg-row flex-column nav-justified">
                                    <li class="nav-item">
                                        <a asp-controller="Products" asp-action="Index" class="nav-link m-lg-3 m-1 link-item">Products</a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-controller="Categories" asp-action="Index" class="nav-link m-lg-3 m-1 link-item">Categories</a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-controller="User" asp-action="AllUsers" class="nav-link m-lg-3 m-1 link-item">Users</a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-controller="Order" asp-action="GetAllOrders" class="nav-link m-lg-3 m-1 link-item">Orders</a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="#" class="nav-link m-lg-3 m-1 link-item">@User.Identity.Name</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link m-lg-3 m-1 link-item" asp-controller="Auth" asp-action="LogOut">LogOut</a>
                                    </li>
                                </ul>
                            }

                        </div>
                        <div class="col-lg-5 col-10 mx-auto">
                            <div class="input-group">
                                <input id="searchInput" class="form-control me-2" type="search" placeholder="Search" aria-label="Search" onchange="updateRouteId()">
                                <div class="input-group-append">
                                    <a id="searchButton" type="button" class="btn" asp-controller="Home" asp-action="SearchProduct">
                                        <i class="fas fa-search"></i>
                                    </a>
                                </div>
                            </div>
                        </div>

                        <script>
                            let originalHref = "http://localhost:5010/Home/SearchProduct";

                            function updateRouteId() {
                                const searchTerm = document.getElementById("searchInput").value;
                                const searchButton = document.getElementById("searchButton");
                                if (!originalHref)
                                    originalHref = searchButton.href;
                                searchButton.href = originalHref + "/" + searchTerm;
                            }
                        </script>
                    </div>
                </div>
                <div class="container">
                    <div class="row my-5">
                        <div class="col text-center">
                            <h1 class="display-1 text-white">MB Bookstore</h1>
                        </div>
                    </div>
                    <div class="row d-lg-block d-none">
                        <div class="col text-center">
                            <img src="~/book2.png" width="550">
                        </div>
                    </div>
                </div>
            </div>
        </nav>
        <!--End of Navigation -->
        <!-- Header -->
        <header class="d-flex align-items-center">
            <div class="align-self-start">
                @if (User.Identity.Name == "Admin")
                {
                    <a asp-controller="Admin" asp-action="Index">
                        <img src="~/book2.png" alt="" width="120" class="img-fluid m-4">
                    </a>
                }
                else
                {
                    <a asp-controller="Home" asp-action="Index">
                        <img src="~/book2.png" alt="" width="120" class="img-fluid m-4">
                    </a>
                }
            </div>
        </header>
        <!-- End of Header-->
    }
    else
    {
        <!-- Navigation -->
        <nav class="navigation">
            <button class="navbar-toggler hamburger-menu" type="button" data-toggle="collapse" data-target="#myNavbar">
                <div class="line1"></div>
                <div class="line2"></div>
                <div class="line3"></div>
            </button>
            <div class="bg-cover"></div>
            <div class="collapse nav-content" id="myNavbar">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-10 mx-auto">
                            <a href="#" class="navbar-brand mt-4 d-lg-none d-block">
                                <img src="~/book2.png" width="120">
                            </a>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <ul class="navbar-nav text-capitalize flex-lg-row flex-column nav-justified">
                                    <li class="nav-item">
                                        <a class="nav-link m-lg-3 m-1 link-item" asp-controller="Home" asp-action="Index">Home</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link m-lg-3 m-1 link-item" asp-controller="Order" asp-action="CheckoutHistory">Order History</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link m-lg-3 m-1 link-item" asp-controller="Basket" asp-action="Index">Basket</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link m-lg-3 m-1 link-item" asp-controller="User" asp-action="Index">@User.Identity.Name</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link m-lg-3 m-1 link-item" asp-area="" asp-controller="Auth" asp-action="LogOut">Log Out</a>
                                    </li>
                                </ul>
                            }
                            else
                            {
                                <ul class="navbar-nav text-capitalize flex-lg-row flex-column nav-justified">
                                    <li class="nav-item">
                                        <a class="nav-link m-lg-3 m-1 link-item" asp-area="" asp-controller="Auth" asp-action="Register">Register</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link m-lg-3 m-1 link-item" asp-area="" asp-controller="Auth" asp-action="SignIn">Sign In</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link m-lg-3 m-1 link-item" asp-area="" asp-controller="Auth" asp-action="AdminSignIn">Sign Up for Admin</a>
                                    </li>
                                </ul>
                            }

                        </div>
                        <div class="col-lg-5 col-10 mx-auto">
                            <div class="input-group">
                                <input id="searchInput" class="form-control me-2" type="search" placeholder="Search" aria-label="Search" onchange="updateRouteId()">
                                <div class="input-group-append">
                                    <a id="searchButton" type="button" class="btn" asp-controller="Home" asp-action="SearchProduct">
                                        <i class="fas fa-search"></i>
                                    </a>
                                </div>
                            </div>
                        </div>

                        <script>
                            let originalHref = "http://localhost:5010/Home/SearchProduct";

                            function updateRouteId() {
                                const searchTerm = document.getElementById("searchInput").value;
                                const searchButton = document.getElementById("searchButton");
                                if (!originalHref)
                                    originalHref = searchButton.href;
                                searchButton.href = originalHref + "/" + searchTerm;
                            }
                        </script>
                    </div>
                </div>
                <div class="container">
                    <div class="row my-5">
                        <div class="col text-center">
                            <h1 class="display-1 text-white">MB Bookstore</h1>
                        </div>
                    </div>
                    <div class="row d-lg-block d-none">
                        <div class="col text-center">
                            <img src="~/book2.png" width="550">
                        </div>
                    </div>
                </div>
            </div>
        </nav>
        <!--End of Navigation -->
        <!-- Header -->
        <header class="d-flex align-items-center">
            <div class="align-self-start">
                <a asp-controller="Home" asp-action="Index">
                    <img src="~/book2.png" alt="" width="120" class="img-fluid m-4">
                </a>
            </div>
        </header>
        <!-- End of Header-->
    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* <footer class="border-top footer text-muted mt-5">
        <div class="container">
            &copy; 2024 - MB Bookstore - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@

    <!-- Footer -->
    <footer style="background-color:#2E3032">
        <div class="container">
            <div class="row pb-3">
                <div class="col-12 pt-4 text-center text-light">
                    <h1>Follow Us</h1>
                </div>
                <div class="col-sm-10 col-12 m-auto">
                </div>
            </div>
            <div class="row">
                <div class="col text-center text-light">
                    <div class="mb-2">
                        <a href="javascript:void(0)" class="mx-sm-4 mx-2"><i class="fab fa-facebook fa-2x text-primary"></i></a>
                        <a href="javascript:void(0)" class="mx-sm-4 mx-2"><i class="fab fa-twitter fa-2x text-info"></i></a>
                        <a href="javascript:void(0)" class="mx-sm-4 mx-2"><i class="fab fa-instagram fa-2x text-danger"></i></a>
                        <a href="javascript:void(0)" class="mx-sm-4 mx-2"><i class="fab fa-linkedin fa-2x text-info"></i></a>
                    </div>
                </div>
            </div>
        </div>

        <div class="container-fluid p-3">
            <div class="row">
                <div class="col text-center text-light">
                    <p>&copy; 2024 - MB Bookstore</p>
                </div>
            </div>
        </div>
    </footer>
    <!-- End of Footer -->

    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap-5.3.3/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @* <script src="https://cdn.canvasjs.com/canvasjs.min.js"></script> *@

    <script src="~/js/jquery-3.3.1.min.js"></script>
    <script src="~/js/popper.js"></script>
    <script src="~/js/bootstrap.js"></script>
    <script src="~/js/script.js"></script>
    <script src="~/js/lightbox.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
